<h2>Page for project <%= @project.name %></h2>

<p>Company: <%= @project.company.name %></p>
<p>Default Rate: <%= @project.default_rate %></p>

<p><%= link_to 'Edit project', edit_project_path(@project) %></p>
<p>alias: <%= @project.slug %> </p>


<div class="remoteform">
  <h2>Add work</h2>
  <%= render partial: 'works/form', local: {doajax: true} %>
</div>

<table>
  <tbody>
  <tr>
    <th>View</th>
    <th>User</th>
    <th>Project</th>
    <th>Date/Time</th>
    <th>Hours</th>
  </tr>
    <%= render partial: 'works/work', collection: @project.works %>
  </tbody>
</table>

<% content_for :aside do %>
    <% render 'sidebar' %>
<% end %>