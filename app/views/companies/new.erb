<h2>New Company</h2>

<% if @company.errors.any? %>
    <div id="errors">
      <p>Please correct the following <%= pluralize(@company.errors.count, "error")%>:</p>
      <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @company do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit "Create Company" %>
  </div>
<% end %>

<% content_for :aside do %>
  <%= render 'sidebar' %>
<% end %>