<h2>New Project</h2>

<%= form_for @project do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :company_id   %>
      <%= f.collection_select(:company_id, Company.all, :id, :name, prompt: true)  %>
    </div>
    <div>
      <%= f.label :slug, 'URL alias' %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :default_rate %>
      <%= f.number_field :default_rate %>
    </div>
    <div>
      <%= f.submit "Create Project" %>
    </div>
<% end %>

<% content_for :aside do %>
    <%= render 'sidebar' %>
<% end %>